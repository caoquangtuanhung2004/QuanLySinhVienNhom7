<Window x:Class="QuanLynhom7.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLynhom7"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6FB">

    <Window.Resources>
        <Style TargetType="TextBox" x:Key="InputBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="InputBoxPwd">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#307FE2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="12" Background="White" Padding="22"
                BorderBrush="#D0D7E2" BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Đăng nhập" FontSize="22" FontWeight="Bold" Foreground="#1E2A3A"/>
                </StackPanel>

                <!-- Nội dung -->
                <StackPanel Grid.Row="1" Margin="0,8,0,0">
                    <TextBlock Text="Tên đăng nhập" FontSize="12" Foreground="#374151"/>
                    <TextBox x:Name="txtUserId" Style="{StaticResource InputBox}" Width="360"/>

                    <TextBlock Text="Mật khẩu" FontSize="12" Foreground="#374151" Margin="0,8,0,0"/>
                    <PasswordBox x:Name="pwdBox" Style="{StaticResource InputBoxPwd}" Width="360"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <CheckBox x:Name="chkRemember" Content="Ghi nhớ đăng nhập"/>
                        <Button Content="Quên mật khẩu?" 
                                Background="Transparent" BorderThickness="0" Foreground="#307FE2"
                                Margin="20,0,0,0"/>
                    </StackPanel>

                    <Button x:Name="btnLogin" Style="{StaticResource PrimaryButton}" Width="360"
                            Content="Đăng nhập" Click="btnLogin_Click"/>

                    <TextBlock x:Name="txtError" Foreground="#B00020" Margin="0,8,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
