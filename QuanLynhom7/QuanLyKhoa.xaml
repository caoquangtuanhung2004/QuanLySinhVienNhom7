<Window x:Class="QuanLynhom7.QuanLyKhoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLynhom7"
        mc:Ignorable="d"
        Title="QuanLyKhoa" Height="450" Width="800">
    <DockPanel>
        <!-- Menu chính -->
        <Menu DockPanel.Dock="Top" Background="#1976D2" Foreground="White" FontSize="20">
            <MenuItem Header="Quản lý sinh viên" Click="quanlysinhvien_Click">

            </MenuItem>
            <MenuItem Header="Quản lý khoa">

            </MenuItem>
            <MenuItem Header="Quản lý môn học">

            </MenuItem>
            <MenuItem Header="Quản lý điểm">

            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Quản lý Khoa" 
                   FontSize="20" FontWeight="Bold" 
                   Foreground="Black"
                   Margin="0,0,0,10"/>

            <DataGrid x:Name="dgKhoa" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single"
                  AlternatingRowBackground="LightGray"
                  BorderBrush="Gray" BorderThickness="1" SelectionChanged="DgKhoa_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã Khoa" Binding="{Binding MaKhoa}" Width="100"/>
                    <DataGridTextColumn Header="Tên Khoa" Binding="{Binding TenKhoa}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBox x:Name="txtMaKhoa" Width="249" Margin="0,0,0,5" ToolTip="Mã Khoa"/>
                    <TextBox x:Name="txtTenKhoa" Width="250" Margin="0,0,0,5" ToolTip="Tên Khoa"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Thêm" Width="80" Click="BtnAdd_Click" Margin="5,0"/>
                    <Button Content="Sửa" Width="80" Click="BtnEdit_Click" Margin="5,0"/>
                    <Button Content="Xóa" Width="80" Click="BtnDelete_Click" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
