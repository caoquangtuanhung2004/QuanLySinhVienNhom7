<Window x:Class="QuanLynhom7.QuanLyKhoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLynhom7"
        mc:Ignorable="d"
        Title="Quản lý khoa" Height="450" Width="800" Loaded="Window_Loaded"
        Background="#F5F5F5">

    <DockPanel>
        
        <Menu DockPanel.Dock="Top" Background="#1976D2" Foreground="White" FontSize="18" Padding="5">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="15,5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1565C0"/>
                            <Setter Property="Foreground" Value="#FFEB3B"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem Header="📘 Quản lý sinh viên" Click="quanlysinhvien_Click"/>
            <MenuItem Header="🏫 Quản lý khoa"/>
            <MenuItem Header="📚 Quản lý môn học" Click="quanlymonhoc_Click"/>
            <MenuItem Header="📝 Quản lý điểm" Click="QuanLyDiem_Click"/>
        </Menu>

        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <TextBlock Text="📌 Quản lý Khoa" 
                   FontSize="22" FontWeight="Bold" 
                   Foreground="#1976D2"
                   Margin="0,0,0,15"/>

           
            <DataGrid x:Name="dgKhoa" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single"
                  AlternatingRowBackground="#E3F2FD"
                  BorderBrush="#90CAF9" BorderThickness="1"
                  RowHeight="35" FontSize="14"
                  SelectionChanged="DgKhoa_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã Khoa" Binding="{Binding MaKhoa}" Width="120"/>
                    <DataGridTextColumn Header="Tên Khoa" Binding="{Binding TenKhoa}" Width="*"/>
                </DataGrid.Columns>
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1976D2"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>

           
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,0,25,0">
                    <TextBlock Text="Mã khoa" FontWeight="Bold" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtMaKhoa" Width="250" Height="30" Margin="0,0,0,10" 
                             Padding="5" BorderBrush="#90CAF9" BorderThickness="1" ToolTip="Mã Khoa"/>

                    <TextBlock Text="Tên khoa" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBox x:Name="txtTenKhoa" Width="250" Height="30"
                             Padding="5" BorderBrush="#90CAF9" BorderThickness="1" ToolTip="Tên Khoa"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="➕ Thêm" Width="90" Height="35" Margin="5,0"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Click="BtnAdd_Click"/>

                    <Button Content="✏️ Sửa" Width="90" Height="35" Margin="5,0"
                            Background="#FF9800" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Click="BtnEdit_Click"/>

                    <Button Content="🗑 Xóa" Width="90" Height="35" Margin="5,0"
                            Background="#F44336" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Click="BtnDelete_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
