<Window x:Class="QuanLynhom7.quanlysinhvien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý sinh viên" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize" Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Style cho Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Style cho DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="AlternatingRowBackground" Value="#E3F2FD"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Menu -->
        <Menu DockPanel.Dock="Top" Background="#1976D2" Foreground="White" FontSize="20">
            <MenuItem Header="Quản lý sinh viên" />
            <MenuItem Header="Quản lý khoa" Click="MenuItem_Click"/>
            <MenuItem Header="Quản lý môn học"  Click="quanlymonhoc_Click"/>
            <MenuItem Header="Quản lý điểm"/>
        </Menu>

        <!-- Grid chính -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thông tin sinh viên -->
            <GroupBox Header="Thông tin sinh viên" Grid.Row="0" Grid.Column="0" FontSize="16" FontWeight="Bold">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Mã sinh viên:"/>
                    <TextBox x:Name="txtmasv" Grid.Row="0" Grid.Column="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Họ tên:"/>
                    <TextBox x:Name="txthoten" Grid.Row="1" Grid.Column="1"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Địa chỉ:"/>
                    <TextBox x:Name="txtdiachi" Grid.Row="2" Grid.Column="1" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Giới tính:"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                        <RadioButton x:Name="radionam" Content="Nam" Margin="0,0,20,0"/>
                        <RadioButton x:Name="raduonu" Content="Nữ"/>
                    </StackPanel>

                    <Label Grid.Row="4" Grid.Column="0" Content="Lớp:"/>
                    <ComboBox x:Name="dslopcombox" Grid.Row="4" Grid.Column="1"
                              DisplayMemberPath="TenLop" SelectedValuePath="MaLop"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="Ngày sinh:"/>
                    <DatePicker x:Name="datengaysinh" Grid.Row="5" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <!-- Chức năng -->
            <GroupBox Header="Chức năng" Grid.Row="0" Grid.Column="1" FontSize="16" FontWeight="Bold">
                <StackPanel Margin="10">
                    <Button x:Name="btnthem" Content="Thêm" Click="btnthem_Click"/>
                    <Button x:Name="btnsua" Content="Sửa" Click="btnsua_Click"/>
                    <Button x:Name="btnxoa" Content="Xóa" Click="btnxoa_Click"/>
                    <Button x:Name="btntimkiem" Content="Tìm kiếm" Click="btntimkiem_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Danh sách sinh viên -->
            <DataGrid x:Name="datadanhachsinhvien" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                      AutoGenerateColumns="False" IsReadOnly="False"
                      ColumnWidth="*" SelectionChanged="datadanhachsinhvien_SelectionChanged">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <!-- Chữ đậm -->
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <!-- Căn giữa -->
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã SV" Binding="{Binding MaSV}" />
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" />
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat=d}" />
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" />
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" />
                    <DataGridTextColumn Header="Lớp" Binding="{Binding Lop.TenLop}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
